import java.io.File;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import java.util.regex.Pattern;

public class FileSearch {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String homeDirectory = System.getProperty("user.home");
        
        System.out.println("File Search Program");
        System.out.println("Home Directory: " + homeDirectory);
        System.out.println("Enter a regular expression to search for files (or 'q' to quit):");

        String regex = scanner.nextLine();
        while (!regex.equalsIgnoreCase("q")) {
            searchFiles(homeDirectory, regex);
            System.out.println("Enter a regular expression to search for files (or 'q' to quit):");
            regex = scanner.nextLine();
        }

        scanner.close();
    }

    public static void searchFiles(String directory, String regex) {
        List<String> matchingFiles = new ArrayList<>();

        File dir = new File(directory);
        if (dir.exists() && dir.isDirectory()) {
            File[] files = dir.listFiles();
            if (files != null) {
                for (File file : files) {
                    if (file.isFile() && Pattern.matches(regex, file.getName())) {
                        matchingFiles.add(file.getAbsolutePath());
                    }
                }
            }
        }

        if (matchingFiles.isEmpty()) {
            System.out.println("No files found matching the regular expression.");
        } else {
            System.out.println("Matching files:");
            for (String filePath : matchingFiles) {
                System.out.println(filePath);
            }
        }
    }
}

